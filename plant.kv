#:kivy 2.3.0

WindowManager:
    AddPlant:
    ShowTasks:
    ShowPlants:

<AddPlant>:
    name: "AddPlants"
    plantInput: plantInput
    nameTextInput: name
    lTWTextInput: lTW
    heightTextInput: height
    
    GridLayout:
        id: addPlantMainGrid
        cols: 1

        GridLayout:
            id: plantInput
            cols: 2

            Label:
                text: "Name: "
            TextInput:
                id: name
                multiline: False
            
            Label:
                text: "Height: "
            TextInput:
                id: height
                multiline: False

            Label:
                text: "last time watered (days ago): "
            TextInput:
                id: lTW
                multiline: False
    
        GridLayout:
            id: buttons
            cols: 2
            size_hint: (1, 0.3)

            Button:
                text: "Show Plants"
                on_release:
                    app.root.current = "Plants"
                    root.manager.transition.direction = "left"
             
            Button:
                text: "Show Tasks"
                on_release: 
                    app.root.current = "Tasks"
                    root.manager.transition.direction = "right"
                    
<ShowPLants>:
    name: "Plants"
    plantsGrid: plantsGrid

    GridLayout:
        id: showPlantsMainGrid
        cols: 1

        GridLayout:
            id: plantsGrid
            cols: 1
            rows: 3
            size_hint: (1, 1)
            padding: [showPlantsMainGrid.width*0.1, 0]

        GridLayout:
            id: buttons
            cols: 2
            size_hint: (1, 0.3)

            Button:
                text: "Add Plants"
                on_release:
                    app.root.current = "AddPlants"
                    root.manager.transition.direction = "right"
            
            Button:
                text: "Show Tasks"
                on_release:
                    app.root.current = "Tasks"
                    root.manager.transition.direction = "left"


<ShowTasks>:
    name: "Tasks"
    outputLabel: output

    GridLayout:
        id: showTasksMainGrid
        cols: 1

        Label:
            id: output

        GridLayout:
            id: buttons
            cols: 2
            size_hint: (1, 0.3)

            Button:
                text: "AddPlants"
                on_release: 
                    app.root.current = "AddPlants"
                    root.manager.transition.direction = "left"
            
            Button:
                text: "ShowPlants"
                on_release: 
                    app.root.current = "Plants"
                    root.manager.transition.direction = "right"
