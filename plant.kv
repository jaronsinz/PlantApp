#:kivy 2.3.0

WindowManager:
    AddPlant:
    ShowTasks:

<AddPlant>:
    name: "AddPlants"
    plantInput: plantInput
    nameTextInput: name
    lTWTextInput: lTW
    heightTextInput: height
    
    GridLayout:
        id: addPlantMainGrid
        cols: 1

        GridLayout:
            id: plantInput
            cols: 2

            Label:
                text: "Name: "
            TextInput:
                id: name
                multiline: False
            
            Label:
                text: "Height: "
            TextInput:
                id: height
                multiline: False

            Label:
                text: "last time watered (days ago): "
            TextInput:
                id: lTW
                multiline: False
    
        GridLayout:
            id: buttons
            cols: 2

            Button:
                text: "Add Plant"
             
            Button:
                text: "Show Tasks"
                on_release: 
                    app.root.current = "Tasks"
                    root.manager.transition.direction = "right"
                    

<ShowTasks>:
    name: "Tasks"
    outputLabel: output

    GridLayout:
        id: showTasksMainGrid
        cols: 1

        Label:
            id: output
  
        Button:
            text: "SwitchView"
            on_release: 
                app.root.current = "AddPlants"
                root.manager.transition.direction = "left"
