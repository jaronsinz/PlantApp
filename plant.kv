#:kivy 2.3.0

<MainGrid>:   

    outputLabel: output
    nameTextInput: name
    heightTextInput: height
    lTWTextInput: lTW

    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name: "

            TextInput:
                id: name
                multiline: False
            
            Label:
                text: "Height: "

            TextInput:
                id: height
                multiline: False

            Label:
                text: "last time watered (days ago): "

            TextInput:
                id: lTW
                multiline: False

        Label:
            id: output
            text: "Hello"

        GridLayout:
            cols: 2
            Button:
                text: 'Add Plant'
                on_press: root.addNewPlant()
            Button:
                text: 'Show Tasks'
                on_press: root.showTasks()