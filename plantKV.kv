#:kivy 2.3.0

WindowManager:
    id: WM
    AddPlant:
    ShowTasks:
    ShowPlants:

<AddPlant>:
    name: "AddPlant"
    plantInput: plantInput
    nameTextInput: name
    lTWTextInput: lTW
    heightTextInput: height
    
    GridLayout:
        id: addPlantMainGrid
        cols: 1

        GridLayout:
            id: plantInput
            cols: 2

            Label:
                text: "Name: "
            TextInput:
                id: name
                multiline: False
            
            Label:
                text: "Height: "
            TextInput:
                id: height
                multiline: False

            Label:
                text: "last time watered (days ago): "
            TextInput:
                id: lTW
                multiline: False
    
        MenuButtons:
            id: mButtonsAddPlant
                    
<ShowPLants>:
    name: "Plants"
    plantsGrid: plantsGrid

    GridLayout:
        id: showPlantsMainGrid
        cols: 1

        GridLayout:
            id: plantsGrid
            cols: 1
            rows: 3
            size_hint: (1, 1)
            padding: [showPlantsMainGrid.width*0.1, 0]

        MenuButtons:
            id: mButtonsPlants


<ShowTasks>:
    name: "Tasks"
    outputLabel: output

    GridLayout:
        id: showTasksMainGrid
        cols: 1

        Label:
            id: output
            text: ""
        
        MenuButtons:
            id: mButtonsTasks

<MenuButtons>:
    testBtn: testButton
    size_hint: (1, 0.3)
    cols: 3
    spacing: 10
    Button:
        id: testButton
        background_color: 1, .3, .4, .85
        on_release:
            app.root.transition.direction = "right"
            app.root.current = "Plants"
        Image:
            source: "data/img/icons/plant.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y*1.2
        Label:
            size: self.parent.size
            pos: (self.parent.pos[0],0.2)
            text: "Show Plants"
    Button:
        background_color: 1, .3, .4, .85
        on_release:
            if app.root.current == "Plants": app.root.transition.direction = "left" 
            else: app.root.transition.direction = "right"
            app.root.current = "Tasks"        
        Image:
            source: "data/img/icons/plant.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y*1.2
        Label:
            size: self.parent.size
            pos: self.parent.pos
            text: "Show Tasks"
            background_color: 0, 240, 0, 1

    Button:
        background_color: 1, .3, .4, .85
        on_release:
            app.root.transition.direction = "left"
            app.root.current = "AddPlant"
        Image:
            source: "data/img/icons/plant.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y*1.2
        Label:
            size: self.parent.size
            pos: self.parent.pos
            text: "Add Plant"
            background_color: 240, 0, 0, 1
