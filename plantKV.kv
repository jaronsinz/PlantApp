#:kivy 2.3.0

WindowManager:
    id: WM
    AddPlant:
    ShowTasks:
    ShowPlants:

<AddPlant>:
    name: "AddPlant"
    plantInput: plantInput
    nameTextInput: name
    lTWTextInput: lTW
    heightTextInput: height
    
    GridLayout:
        id: addPlantMainGrid
        cols: 1

        GridLayout:
            id: plantInput
            cols: 2

            Label:
                text: "Name: "
            TextInput:
                id: name
                multiline: False
            
            Label:
                text: "Height: "
            TextInput:
                id: height
                multiline: False

            Label:
                text: "last time watered (days ago): "
            TextInput:
                id: lTW
                multiline: False
    
        MenuButtons:
            id: mButtonsAddPlant
                    
<ShowPlants>:
    name: "Plants"
    plantsGrid: plantsGrid

    GridLayout:
        id: showPlantsMainGrid
        cols: 1
        ScrollView:
            do_scroll_x: False
            size_hint: (1,1)
            GridLayout:
                id: plantsGrid
                cols: 1
                size_hint: (1, 1)
                padding: [showPlantsMainGrid.width*0.1, 0]

        MenuButtons:
            id: mButtonsPlants

<SPRow>:
    id: ""
    cols: 2

<SPLabel>:
    disabled: True
    halign: "center"
    size_hint: (0.7, 1)
    background_color: kivy.utils.get_color_from_hex("#E69F65")

<SPRmvButton>:
    size_hint: (0.3, 1)
    Image:
        source: "data/img/icons/cross.png"
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        size: (self.texture_size[0]*0.1, self.texture_size[1]*0.1)

<ShowTasks>:
    name: "Tasks"
    outputLabel: output

    GridLayout:
        id: showTasksMainGrid
        cols: 1

        Label:
            id: output
            text: ""
        
        MenuButtons:
            id: mButtonsTasks

<MenuButtons>:
    size_hint: (1, 0.2)
    cols: 3
    spacing: self.width*0.01
    padding: self.width*0.01
    canvas.before:
        Color:
            rgb: kivy.utils.get_color_from_hex('#709170')
        Rectangle:
            size: self.size
            pos: self.pos
    MenuButton:
        on_release:
            app.root.transition.direction = "right"
            app.root.current = "Plants"
        MenuBtnImage:
            source: "data/img/icons/plants.png"
        MenuBtnLabel:
            text: "Show Plants"

    MenuButton:
        on_release:
            if app.root.current == "Plants": app.root.transition.direction = "left" 
            else: app.root.transition.direction = "right"
            app.root.current = "Tasks"        
        MenuBtnImage:
            source: "data/img/icons/tasks.png"
        MenuBtnLabel:
            text: "Show Tasks"

    MenuButton:
        on_release:
            app.root.transition.direction = "left"
            app.root.current = "AddPlant"
        MenuBtnImage:
            source: "data/img/icons/addPlant.png"
        MenuBtnLabel:
            text: "Add Plant"

<MenuButton>:
    background_color: kivy.utils.get_color_from_hex("#E69F65")

<MenuBtnImage>:
    center_x: self.parent.center_x
    center_y: self.parent.center_y*1.2
    size: (self.texture_size[0]*0.1, self.texture_size[1]*0.1)
<MenuBtnLabel>:
    text_size: (self.parent.width, None)
    color: (0,0,0,1)
    halign: "center"
    center_x: self.parent.center_x
    center_y: self.parent.center_y*0.6
